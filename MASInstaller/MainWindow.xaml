<Window x:Class="MASInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MASInstaller"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="MainWindow" Height="450" Width="750" ResizeMode="NoResize">
    <Grid>
        <Grid VerticalAlignment="Top" Height="35" Background="#FF20242A" MouseDown="Grid_MouseDown">
            <Button Content="-" Background="#FF20242A" BorderBrush="{x:Null}" Foreground="#fff" HorizontalAlignment="Right" Margin="0,0,50,0" Width="50"  FontSize="24" FontWeight="Bold" FontStyle="Normal" Click="Button_Click"/>
            <Button Content="X" Width="50" Background="#FF20242A" BorderBrush="{x:Null}" Foreground="#fff" HorizontalAlignment="Right" FontSize="24" Click="Button_Click_1"/>
        </Grid>
    </Grid>
</Window>
